
@{
    ViewData["Title"] = "Quoting Dojo";
}
<div class="top">
    <h1>Welcome to Quoting Dojo</h1>
</div>

<div class="container">
<form class="form-horizontal" action="addQuote" method="POST">
  <div class="form-group">
    <label for="Name" class="col-sm-2 control-label"> Your Name:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control"  placeholder="Name" name="Name">
    </div>
  </div>
  <div class="form-group">
    <label for="Quote" class="col-sm-2 control-label">Your Quote:</label>
    <div class="col-sm-10">
      <textarea class="form-control" rows="3" placeholder="Quote" name="Quote"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add my Quote!</button>
    </div>
  </div>
</form>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <a href="/quotes"><button type="submit" class="btn btn-default">Skip to Quotes</button></a>
    </div>
</div>